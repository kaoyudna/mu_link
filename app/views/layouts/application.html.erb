<!DOCTYPE html>
<html>
  <head>
    <title>Mu_Link</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
          <div class="col-2 p-0 text-center">
            <a class="navbar-brand" href="/"><span>Mu_Link</span></a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
              <div class="col-1 p-0 text-center">
                <%= link_to current_user.name, user_path(current_user) %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Log_out", destroy_user_session_path, method: :delete %>
              </div>
              <div class="col-4 p-0 mx-auto">
                <%= render 'public/artists/search' %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Artists", artists_path %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Posts", posts_path %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Users", users_path %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Groups", groups_path %>
              </div>
            <% else %>
              <div class="col-1 p-0 text-center">
                <%= link_to "Sign_up", new_user_registration_path %>
              </div>
              <div class="col-1 p-0 text-center">
                <%= link_to "Log_in", new_user_session_path %>
              </div>
            <% end %>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
   <footer class="py-3 bg-dark mt-3" style="height: 100px;">
    <div class="container h-100 align-middle">
      <div class="text-center">
        <div class="mt-3">
        <a class="text-center text-white" style="line-height: 1;" href="/"><span class="text-center">Mu_link</span></a>
        </div>
        <div class="mt-2 mr-4">
     　  <span class="copyright text-white text-center" style="line-height: 1; font-size: 10px;">
       　supporting Spotify
        </span>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
