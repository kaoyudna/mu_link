<!DOCTYPE html>
<html>
  <head>
    <title>Mu_Link</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3 pt-0 pb-0">
        <div class="container">
        <% if user_signed_in? %>
        <div id="sp-menu">
          <h2 class="font-weight-bold">MENU</h2>
          <ul>
            <li><%= link_to "New post", new_post_path, class: "text-white" %></li>
            <li><%= link_to "Your group", groups_path, class: "text-white" %></li>
            <li><%= link_to "Your favorite posts", posts_path(liked_post_id: current_user.id), class: "text-white" %></li>
          </ul>
        </div>
        <div id="hm-icon">
          <a class="menu-trigger" href="#">
            <span></span>
            <span></span>
            <span></span>
          </a>
        </div>
        <% end %>
          <div class="col-2 p-0 text-center">
            <% if admin_signed_in? %>
              <a class="navbar-brand pt-0 pb-0" href="/admin"><%= image_tag 'mu_link.png', style: "width: 100px" %></a>
            <% else %>
              <a class="navbar-brand pt-0 pb-0" href="/"><%= image_tag 'mu_link.png', style: "width: 100px" %></a>
            <% end %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
              <%= render 'layouts/users_header' %>
            <% elsif admin_signed_in? %>
              <%= render 'layouts/admins_header' %>
            <% else %>
              <%= render 'layouts/logout_header' %>
            <% end %>
        </div>
      </nav>
    </header>


    <main>
      <%= render 'shared/flash_message' %>
      <%= yield %>
    </main>
   <footer class="py-3 bg-dark mt-3" style="height: 100px;">
    <div class="container h-100 align-middle">
      <div class="text-center">
        <div class="mt-3">
        <a class="text-center text-white" style="line-height: 1;" href="/"><span class="text-center">Mu_link</span></a>
        </div>
        <div class="mt-2 mr-4">
     　  <span class="copyright text-white text-cente align-middle" style="line-height: 1; font-size: 10px;">
       　<%= image_tag 'spotify.png', style: "width: 60px" %>
        </span>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
