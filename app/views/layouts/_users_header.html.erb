<div class="col-1 p-0 text-center position-relative" style="border-left: 1px solid #a9a9a9">
  <%= link_to user_path(current_user) do %>
    <%= image_tag current_user.get_profile_image(30,30), class: "rounded-circle" %>
  <% end %>
  <div id="checked">
    <%= render "layouts/check_icon" %>
  </div>
</div>
<div class="col-1 p-0 text-center" style="border-left: 1px solid #a9a9a9; border-right: 1px solid #a9a9a9">
  <%= link_to "Log_out", destroy_user_session_path, method: :delete, class: "text-light font-weight-bold" %>
</div>
<div class="col-4 p-0 mx-auto">
  <% if current_page?(posts_path) %>
    <%= render 'public/posts/search_post' %>
  <% elsif current_page?(users_path) %>
    <%= render 'public/users/search_user' %>
  <% elsif current_page?(groups_path) %>
    <%= render 'public/groups/search_group' %>
  <% else %>
    <%= render 'public/artists/search_artist' %>
  <% end %>
</div>
<div class="col-1 p-0 text-center" style="border-left: 1px solid #a9a9a9">
  <%= link_to "Artists", artists_path, class: "text-light font-weight-bold" %>
</div>
<div class="col-1 p-0 text-center" style="border-left: 1px solid #a9a9a9">
  <%= link_to "Posts", posts_path, class: "text-light font-weight-bold" %>
</div>
<div class="col-1 p-0 text-center" style="border-left: 1px solid #a9a9a9">
  <%= link_to "Users", users_path, class: "text-light font-weight-bold" %>
</div>
<div class="col-1 p-0 text-center" style="border-left: 1px solid #a9a9a9">
  <%= link_to "Groups", groups_path, class: "text-light font-weight-bold" %>
</div>