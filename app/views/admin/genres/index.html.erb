<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <table class="table table-sm text-center table-bordered table-striped">
          <tr>
            <th scope="col" style="width: auto">Name</th>
            <th scope="col" style="width: auto">Registered Date</th>
            <th scope="col" style="width: auto">Edit</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr class="text-secondary">
            <td class="align-middle"><%= genre.name %></td>
            <td class="align-middle"><%= genre.created_at %></td>
            <td class="align-middle"><%= link_to "Edit", admin_edit_genre_path(genre), class: "btn btn-outline-info p-0 pr-1 pl-1" %></td>
          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>