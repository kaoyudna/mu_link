<div class="container">
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <h2>通報一覧</h2>
    </div>
    <div class="col-lg-10 mx-auto">
      <table class="table table-sm text-center table-bordered table-striped">
        <thead class="bg-secondary text-white">
          <tr>
            <th scope="col" style="width: auto">通報ID</th>
            <th scope="col" style="width: auto">会員名</th>
            <th scope="col" style="width: auto">通報者</th>
            <th scope="col" style="width: auto">ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @reports.each do |report| %>
          <tr class="text-secondary">
            <td class="align-middle"><%= link_to report.id, admin_report_path(report) %></td>
            <td class="align-middle"><%= report.reported.name %></td>
            <td class="align-middle"><%= report.reporter.name %></td>
            <td class="align-middle"><%= report.status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @reports, class: "mx-auto" %>
    </div>
  </div>
</div>