<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="card">
        <div class="card-header font-weight-bold bg-secondary text-white text-center p-0">
          不適切なコメント
        </div>
        <table class="table table-sm text-center table-bordered table-striped mb-0">
          <% @inappropriate_comments.each do |comment| %>
          <tr>
            <td class="align-middle" scope="col" style="width: 70%"><%= comment.comment %></td>
            <td><%= link_to "Delete", admin_inappropriate_comments_path(comment), method: :delete , class: "btn btn-outline-danger pl-1 pr-1 pt-0 pb-0" %></td>
          </tr>
          <% end %>
        </table>
        <%= link_to "あ", admin_post_comments_path(comment_id: 1) %>
      </div>
    </div>
    <div class="col-lg-9">
      <table class="table table-sm text-center table-bordered table-striped">
        <thead class="bg-secondary text-white">
          <tr>
            <th scope="col" style="width: auto">Post title</th>
            <th scope="col" style="width: auto">Comments</th>
            <th scope="col" style="width: auto">User name</th>
            <th scope="col" style="width: auto">Registered Date</th>
            <th scope="col" style="width: auto">Delete</th>
          </tr>
        </thead>
        <tbody>
        <% @post_comments.each do |post_comment| %>
          <tr class="text-secondary">
            <td class="align-middle"><%= post_comment.post.title %></td>
            <td class="align-middle"><%= post_comment.comment %></td>
            <td class="align-middle"><%= link_to post_comment.user.name, user_path(post_comment.user), class: "text-secondary" %></td>
            <td class="align-middle"><%= post_comment.created_at %></td>
            <td class="align-middle"><%= link_to "Delete", admin_post_comment_path(post_comment), method: :delete, class: "btn btn-outline-danger p-0 pr-1 pl-1" %></td>
          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>