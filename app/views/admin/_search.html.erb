<% if current_page?(admin_users_path) %>
  <%= form_with url: admin_users_path, method: :get, local: true do |f| %>
    <div class="d-flex">
      <%= f.text_field :word, class: 'form-control', placeholder: "Search User" %>
      <%= f.submit '検索',class: "btn btn-outline-info", name: nil %>
    </div>
  <% end %>
