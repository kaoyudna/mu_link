<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="font-weight-bold">Post lists</h1>
    </div>
  </div>
  <div class="row">
  <div class="col-lg-2">
    <% @genres.each do |genre| %>
    <%= link_to genre.name, posts_path(genre_id: genre.id) %>(<%= genre.posts.count %>)
    <% end %>
  </div>
      <div class="col-lg-10 mb-3">
  <div class="d-flex align-content-around flex-wrap">
    <% @posts.each do |post| %>
        <div class="card w-50 mb-2 shadow">
          <div class="card-header bg-secondary">
            <div class="d-flex align-middle">
              <%= image_tag post.user.get_profile_image(40,40), class: 'rounded-circle border' %>
              <h5 class="text-center mx-auto"><%= link_to post.user.name, user_path(post.user), class: "text-light" %></h5>
              <%= render 'public/post_favorites/post_favorite_btn', post: post %>
            </div>
          </div>
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_post_image(300,300), class: "card-img-top", style: "height: 200px;"%>
          <% end %>
          <div class="card-body d-flex flex-column text-center">
            <h5 class="font-weight-bold">
              Title
            </h5>
            <p>
              <%= post.title %>
            </p>
            <h5 class="font-weight-bold">
              Genre
            </h5>
            <p class="text-center">
              <% post.genres.each do |genre| %>
                <%= link_to genre.name, posts_path(genre_id: genre.id) %>
              <% end %>
            </p>
          </div>
          <div class="card-footer text-muted text-center">
            <%= post.created_at %>
          </div>
        </div>
    <% end %>
  </div>
      </div>
      </div>
</div>






