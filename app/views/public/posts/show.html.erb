<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="col-lg-12 pb-2 pl-0 pr-0">
        <div class="card  shadow" style="height: 300px">
          <div class="card-header bg-dark p-1 text-center">
            <p class="font-weight-bold link-white mb-0"><%= link_to @user.name, user_path(@user), class: "text-light" %></p>
          </div>
          <%= render 'public/users/users_card', user: @user %>
        </div>
      </div>
      <div class="col-lg-12  pb-2 pl-0 pr-0">
        <div class="card overflow-auto" style="height: 250px">
          <h5 class="font-weight-bold mx-auto border-bottom border-dark p-1">Favorite Artists</h5>
          <%= render 'public/users/favorite_artists', artists: @artists %>
        </div>
      </div>
    </div>
    <div class="col-lg-5 pb-2">
      <div class="card shadow">
        <%= image_tag @post.get_post_image(600,600), class: "card-img-top", style: "height: 350px;" %>
        <div class="card-body overflow-auto" style="height: 200px;">
          <h5><%= @post.title %></h5>
          <p><%= @post.body %></p>
          <div class="d-flex flex-column">
            <small class="text-muted">
              <% @post.genres.each do |genre| %>
                Genre <%= genre.name %>
              <% end %>
            </small>
            <p id="liked_count_<%= @post.id %>" class="mb-0"><%= render 'liked_post_count', post: @post %></p>
            <small class="text-muted"><%= @post.created_at %></small>
          </div>
          <div id="post_favorite_<%= @post.id %>">
            <%= render 'public/post_favorites/post_favorite_btn', post: @post %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="col-lg-12 pb-2 pl-0 pr-0">
        <div class="card overflow-auto pl-4 pr-4" style="height: 250px">
          <h5 class="font-weight-bold mx-auto border-bottom border-dark p-1">Favorited User</h5>
          <%= render "public/users/favorite_users", users: @users %>
        </div>
      </div>
      <div class="col-lg-12 pl-0 pr-0">
        <div class="card shadow" style="height: 300px">
          <div class="card-header bg-dark p-1 text-center">
            <p class="font-weight-bold text-white mb-0">Comments</p>
          </div>
          <div class="card-body overflow-auto">
          <% @comments.each do |comment| %>
            <% if comment.user_id == current_user.id %>
            <div class="text-right pr-3">
              <div class="d-flex  pt-1">
                <p class="border mb-0 pl-2 pr-2 ml-auto rounded bg-white border border-secondary"><%= comment.comment %></p>
              </div>
              <small class="text-muted"><%= comment.created_at %></small>
            </div>
            <% else %>
            <div class="text-left pl-3">
              <div class="align-middle">
                <%= image_tag comment.user.get_profile_image(20,20), class: 'rounded-circle' %>
                <%= comment.user.name %>
              </div>
              <div class="d-flex pt-1">
                <p class="border mb-0 ml-3 pl-2 pr-2 rounded border border-secondary" style="background-color: #bbe2f1;"><%= comment.comment %></p>
              </div>
              <small class="text-muted ml-3"><%= comment.created_at %></small>
            </div>
            <% end %>
          <% end %>
          </div>
          <div class="form-group mb-0">
          <%= form_with model: [@post,@comment] do |f| %>
            <%= f.text_field :comment, class: "form-control bg-white", placeholder: "Enter a comment" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>