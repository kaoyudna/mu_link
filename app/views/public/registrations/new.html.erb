<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="col-lg-12 text-center mb-4">
        <h2 class="font-weight-bold">Sign up</h2>
      </div>
      <div class="col-lg-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="col-6 mx-auto text-center mt-5">
          <%= f.submit "Sign up", class: "btn btn-outline-success btn-block" %>
        </div>
      <% end %>
        <div class="col-6 mx-auto text-center mt-4">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>


