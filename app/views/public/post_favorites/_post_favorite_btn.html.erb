<% if post.favorited_post_by?(current_user) %>
  <%= link_to post_post_favorites_path(post.id), remote: true, method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red; font-size: 24px"></i>
  <% end %>
<% else %>
  <%= link_to post_post_favorites_path(post.id), remote: true, method: :post do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: gray; font-size: 24px"></i>
  <% end %>
<% end %>