<%= form_with model: obj, local:true do |f| %>
  <%= render 'public/shared/error_messages', resource: obj %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <% if current_page?(new_group_path) %>
    <div class="form-group">
      <%= f.label :group_image %>
      <%= f.file_field :group_image, class: "form-control-file", accept: 'image/*' %>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :profile_image %>
      <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
    </div>
    <div class="form-group">
      <%= f.label :background_image %>
      <%= f.file_field :background_image, class: "forms-control-file", accept: 'image/*' %>
    </div>
  <% end %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.submit "Submit" %>
<% end %>