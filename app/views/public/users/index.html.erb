<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="font-weight-bold">Users</h1>
    </div>
  </div>
  <% @genres.each do |genre| %>
    <%= link_to genre.name, users_path(genre_id: genre.id) %>(<%= genre.users.count %>)
    <% end %>
  <div class="d-flex align-content-around flex-wrap">
  <% @users.each do |user| %>
    <div class="col-lg-3 mb-3">
      <div class="card shadow" style="height: 300px">
        <div class="card-header bg-dark p-1 text-center">
          <p class="font-weight-bold link-white mb-0"><%= link_to user.name, user_path(user), class: "text-light" %></p>
        </div>
          <%= render 'users_card', user: user %>
      </div>
    </div>
    <% end %>
  </div>
</div>
