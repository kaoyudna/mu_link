<% unless users == [] %>
  <% users.each do |user| %>
  <% if controller.controller_name == "artists" || controller.controller_name == "artist_favorites"  %>
    <div class="col-md-4 mb-3">
  <% else %>
    <div class="col-md-3 mb-3">
  <% end %>
      <div class="card_wrap">
        <div class="card shadow">
          <div class="card-header bg-dark p-1 text-center">
            <p class="font-weight-bold link-white mb-0"><%= link_to user.name, user_path(user), class: "text-light" %></p>
          </div>
            <%= render 'public/users/users_card', user: user %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-muted mx-auto mt-5">ユーザーが存在しません</p>
<% end %>