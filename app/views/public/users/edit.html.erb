<%= render "public/shared/error_messages", resource: @user %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="font-weight-bold">Edit</h1>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, local:true do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "20文字以下で入力してください", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, placeholder: "20文字以下で入力してください", class: "form-control", rows: "10" %>
      </div>

        <div>
        <%= f.label :genre_id, "ジャンルを追加" %><br>
        <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name, checked: @user.genres.map(&:id), class: "dd",style: "width: 100px; height: 30px" %>
        </div>
        <div class="ml-auto">
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>
        <div class="ml-auto">
          <%= f.label :background_image, "背景画像" %>
          <%= f.file_field :background_image, accept: "image/*", class: "form-control-file" %>
        </div>

      <div class="col-lg-6 text-center mx-auto mt-4">
        <%= f.submit "Update", class: "btn btn-outline-success btn-block" %>
      </div>
    </div>
  </div>
</div>
<% end %>