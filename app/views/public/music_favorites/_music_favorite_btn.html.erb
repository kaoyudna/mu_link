<% if current_user.favorited_music_by?(music) %>
  <%= link_to music_favorite_path(music.id), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <% end %>
<% else %>
  <%= link_to music_favorites_path(music_id: music.id), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
  <% end %>
<% end %>