<% if current_user.favorited_artist_by?(artist) %>
  <%= link_to artist_artist_favorites_path(artist.id), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <% end %>
<% else %>
  <%= link_to artist_artist_favorites_path(artist.id), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: gray"></i>
  <% end %>
<% end %>